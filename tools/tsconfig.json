{
  "compilerOptions": {
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
  },
  "include": [
      "src/**/*"
  ]
}